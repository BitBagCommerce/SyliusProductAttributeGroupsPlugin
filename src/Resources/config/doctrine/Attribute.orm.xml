<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <mapped-superclass name="BitBag\SyliusProductAttributeGroupsPlugin\Entity\Attribute"
                       table="bitbag_product_attribute">
        <id name="id" column="id" type="integer">
            <generator/>
        </id>

        <many-to-one field="group" target-entity="BitBag\SyliusProductAttributeGroupsPlugin\Entity\Group"
                     inversed-by="attributes">
            <join-column name="group_id"/>
        </many-to-one>

        <one-to-one field="syliusAttribute" target-entity="Sylius\Component\Attribute\Model\AttributeInterface">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <join-column name="sylius_attribute_id"/>
        </one-to-one>
    </mapped-superclass>
</doctrine-mapping>
